<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="/stylesheets/author_show.css">
</head>
<body>

<h1>Author SHOW</h1>

<%= link_to "Delete Author", author_path(@author), method: :delete %>
<div id="author-information">
  <%= @author.name %>
  <div class="row">
  <% @author.books.each do |book| %>
  <div class="column column-<%=book.id%>">
    <h2 class="book-title"><%= link_to book.title, book_path(book.id) %></h2><br>
      <p><%= book.pages %></p>
      <p><%= book.published_year %></p>
      <% if book.authors.length > 1 %>
        <% book.authors.each do |author|%>
        <% unless author == @author %>
        <h2 class="coauthors-names"><%= link_to author.name, author_path(author.id) %></h2>
        <%end%>
        <%end%>
      <%end%>
      <div id="book-review">
        <% if book.top_review %>
          <p><%= book.top_review.title %></p>
          <p><%= link_to book.top_review.user_name(book.top_review.user_id), user_path(book.top_review.user_id)  %></p>
          <p><%= book.top_review.rating %></p>
          <p><%= book.top_review.description %></p>
          <% end %>
      </div>
      </div>
  <% end %>
</div>
</div>

</body>
