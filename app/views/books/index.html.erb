<h1>All Books</h1>

<div id="statistics">
  <h2>TOP BOOKS:</h2>
    <% @top_books.each do |book| %>
      <p><%= book.title %></p>
      <p><%= book.average_rating %></p>
    <% end %>
  <h2>LOWEST RATED BOOKS:</h2>
    <% @lowest_books.each do |book|%>
      <p><%= book.title %></p>
      <p><%= book.average_rating %></p>
    <% end %>
  <h2>TOP POWER USERS:</h2>
    <% @power_users.each do |user| %>
      <p><%= user.name %></p>
      <p><%= user.review_count %></p>
    <% end %>
</div>



<div class="books">

<% @books.each do |book| %>
<div class="book book-<%= book.id %>">

  <h2><%=  book.title %></h2>
  <% book.authors.each do |author| %>
    <p><%= author.name %></p>
  <% end %>
  <p><%=  book.pages %></p>
  <p><%=  book.published_year %></p>

</div>
<%end%>
</div>
