<h1>BOOK SHOW</h1>

<%= link_to "Add Review", new_book_review_path(@book) %>
<%= link_to "Delete Book", book_path(@book), method: :delete %>

<div id="book-information">
  <%= @book.title %>
  <% @book.authors.each do |author| %>
      <%= author.name %>
  <% end %>
  <img src="<%= @book.img %>">
  <%= @book.pages %>
  <%= @book.published_year %>
</div>


<div id="book-reviews">
  <% @book.reviews.each do |review| %>
    <p><%= review.title %></p>
    <p><%= link_to review.user_name(review.user_id), user_path(review.user_id) %></p>
    <p><%= review.rating %></p>
    <p><%= review.description %></p>
  <% end %>
</div>
