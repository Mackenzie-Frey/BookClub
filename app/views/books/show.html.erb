<h1>BOOK SHOW</h1>

<div id="book-information">
  <%= @book.title %>
  <% @book.authors.each do |author| %>
      <%= author.name %>
  <% end %>
  <img src="<%= @book.img %>">
  <%= @book.pages %>
  <%= @book.published_year %>
</div>

<div id="book-reviews">
  <% @book.reviews.each do |review| %>
    <p><%= review.title %></p>
    <p><%= review.user_name(review.user_id) %></p>
    <p><%= review.rating %></p>
    <p><%= review.description %></p>
  <% end %>
</div>
