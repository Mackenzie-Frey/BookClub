<head>
  <title>Add Book</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="/stylesheets/user_show.css">
</head>
<div class="title" >
  <h1>their reviews</h1>
</div>
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort by:
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" id="review-date-desc" href="?sort=reviewsdate&order=desc">Reviews: Newest First</a>
    <a class="dropdown-item" id="review-date-asc" href="?sort=reviewsdate&order=asc">Reviews: Oldest First</a>
  </div>
</div>
<div class="card">
  <div class="card-body">
    <h2><%= @user.name %></h2>
    <h5 class="card-title">Profile</h5>
    <p class="card-text">Contribution: <%= @reviews.count %> review(s)</p>
    <p class="card-text">Member since: <%= @user.created_at.strftime("%B %Y") %></p>
  </div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <h1>Scroll to view this user's reviews</h1><br><br><br><br><br><br><br>
    </div>
      <div class="user-reviews">
        <% @reviews.each do |review| %>
        <div class="carousel-item">
          <div id="review-<%= review.id %>">
            <h2>"<%= review.title %>"</h2>
            <p>Book: <%= review.book.title %></p>
            <h2><%= review.rating %><i class="fas fa-star"></i></h2><br />
            <p>"<%= review.description %>" </p><br>
            <p class="submitted-on">submitted <%= review.created_at.strftime("%B %d, %Y") %></p>
            <%= link_to "Delete Review", review_path(review), method: :delete %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
